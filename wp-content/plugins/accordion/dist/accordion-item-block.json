{
    "$schema": "https://json.schemastore.org/block.json",
    "apiVersion": 2,
    "name": "ghub/accordion-item",
    "title": "Accordion Item",
    "description": "Accordion panel block.",
    "category": "ghub-products",
    "version": "1.0.0",
    "textdomain": "ghub-accordion",
    "keywords": [
        "accordion",
        "panel",
        "item"
    ],
    "attributes": {
        "title": {
            "type": "string",
            "default": "Title"
        },
        "enableFAQSchema": {
            "type": "boolean"
        },
        "isOpen": {
            "type": "boolean",
            "default": false
        }
    },
    "supports": {
        "color": {
            "gradients": true,
            "link": false,
            "__experimentalDefaultControls": {
                "background": true,
                "text": true
            }
        },
        "spacing": {
            "margin": true,
            "padding": true
        },
        "__experimentalBorder": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true,
            "__experimentalDefaultControls": {
                "color": true,
                "radius": true,
                "style": true,
                "width": true
            }
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true,
            "__experimentalFontFamily": true,
            "__experimentalTextDecoration": true,
            "__experimentalFontStyle": true,
            "__experimentalFontWeight": true,
            "__experimentalLetterSpacing": true,
            "__experimentalTextTransform": true,
            "__experimentalDefaultControls": {
                "fontSize": true
            }
        }
    },
    "ancestor": [
        "ghub/accordion"
    ],
    "providesContext": {
        "isOpen": "isOpen"
    },
    "usesContext": [
        "isOpenFirstAtATime",
        "enableFAQSchema"
    ],
    "editorStyle": "gutenberghub-accordion-gutenberg-style",
    "editorScript": "gutenberghub-accordion-gutenberg-script",
    "viewScript": "gutenberghub-accordion-frontend",
    "style": "gutenberghub-accordion-frontend-style"
}