{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "ghub/breadcrumb",
  "title": "Breadcrumb",
  "category": "ghub-products",
  "description": "A straightforward block that enables the use of breadcrumb trails and is compatible with JSON-LD structured data.",
  "keywords": [
    "breadcrumb",
    "navigation",
    "menu",
    "link"
  ],
  "attributes": {
    "gap": {
      "type": "number",
      "default": 10
    },
    "separator": {
      "type": "string",
      "default": "slash"
    },
    "showHomePage": {
      "type": "boolean",
      "default": true
    },
    "showCurrentPage": {
      "type": "boolean",
      "default": false
    },
    "homeLabel": {
      "type": "string",
      "default": "Home"
    },
    "alignment": {
      "type": "string",
      "default": "center"
    }
  },
  "supports": {
    "html": false,
    "anchor": true,
    "ariaLabel": true,
    "align": [
      "wide",
      "full"
    ],
    "color": {
      "gradients": true,
      "link": true,
      "__experimentalDefaultControls": {
        "background": true,
        "text": true
      }
    },
    "spacing": {
      "margin": [
        "top",
        "bottom"
      ],
      "padding": true,
      "__experimentalDefaultControls": {
        "padding": true,
        "blockGap": true
      }
    },
    "__experimentalBorder": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true,
      "__experimentalDefaultControls": {
        "color": true,
        "radius": true,
        "style": true,
        "width": true
      }
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "__experimentalFontFamily": true,
      "__experimentalTextDecoration": true,
      "__experimentalFontStyle": true,
      "__experimentalFontWeight": true,
      "__experimentalLetterSpacing": true,
      "__experimentalTextTransform": true,
      "__experimentalDefaultControls": {
        "fontSize": true
      }
    }
  },
  "textdomain": "ghub-breadcrumb",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}